<h1>Add new course</h1>

<form action="/add" method="POST">
        <div class="input-field">
          <input id="title" name="title" type="text" class="validate" required>
          <label for="titlee">Course Name</label>
          <span class="helper-text" data-error="Enter name"></span>
        </div>

        <div class="input-field">
          <input id="price" type="text" name="price" class="validate" required min=1>
          <label for="titlee">Course Price</label>
          <span class="helper-text" data-error="Enter price" ></span>
        </div>

        <div class="input-field">
          <input id="image" type="text" name="img" class="validate" required>
          <label for="titlee">URL image</label>
          <span class="helper-text" data-error="Enter URL"></span>
        </div>

        <button class="btn btn-primary">Add course</button>
</form>